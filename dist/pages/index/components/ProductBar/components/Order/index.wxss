.orderDetail-item {
  display: flex;
  align-items: center;
  padding: 26rpx 4%;
  border-bottom: 1rpx solid #F2F2F3;
  justify-content: space-between;
  font-size: 28rpx;
  color: #808080;
}
.orderDetail-item.radio {
  padding-top: 16rpx;
  padding-bottom: 16rpx;
  color: #DFDFDF;
}
.orderDetail-item-label .pointDiscount {
  color: #999999;
  font-size: 24rpx;
  background-color: #FBEBEF;
  margin-left: 60rpx;
  padding: 8rpx 15rpx;
}
.orderDetail-item-label .pointDiscount .count {
  color: #323232;
  font-weight: bold;
}
.orderDetail-item-label .pointDiscount .price {
  color: #EA5675;
  font-weight: bold;
}
.orderDetail-item-label .couponDiscount {
  background-color: #FFD3B9;
  padding: 8rpx 15rpx;
  color: #EA5675;
  margin-left: 32rpx;
}
.orderDetail-item.selected {
  color: #808080;
}
.orderDetail-item.disabled {
  color: #DFDFDF;
}
.orderDetail-item-value {
  color: #141414;
  flex: 1;
  text-align: right;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
  padding-left: .6em;
}
.orderDetail-item-value.coupon {
  color: #E66228;
}
.orderDetail-item-radio {
  width: 52rpx;
  height: 52rpx;
  border-radius: 50%;
  border: 1rpx solid #C7C7C7;
  display: flex;
  align-items: center;
  justify-content: center;
}
.orderDetail-item-radio.selected {
  background-color: #FC6E50;
  border-color: #FC6E50;
}
.orderDiscountTips {
  display: inline-block;
  color: #108EE8;
  font-size: 24rpx;
  padding: 20rpx 4% 0;
}
.orderButton {
  box-shadow: 1rpx 4rpx 6rpx 1rpx rgba(0, 0, 0, 0.45);
  border-radius: 100rpx;
  display: flex;
  align-items: center;
  width: 92%;
  margin: 160rpx auto 45rpx;
  background-color: #323232;
  overflow: hidden;
}
.orderButton .totalPrice {
  color: #D3D3D3;
  flex: 1;
  font-size: 24rpx;
  background-color: #323232;
  padding-left: .7em;
  margin-top: -6rpx;
}
.orderButton .totalPrice .mark {
  color: #fff;
  padding-left: .2em;
}
.orderButton .totalPrice .price {
  font-weight: bold;
  color: #fff;
  font-size: 36rpx;
}
.orderButton .discountPrice {
  background-color: #323232;
  color: #D3D3D3;
  font-size: 24rpx;
  margin-top: -6rpx;
  padding-right: 36rpx;
}
.orderButton .buyButton {
  color: #fff;
  font-size: 30rpx;
  background-color: #108EE8;
  border: 1rpx solid #108ee8;
  padding: 24rpx 35rpx 31rpx 29rpx;
}