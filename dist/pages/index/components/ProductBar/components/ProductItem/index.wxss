.ProductItem {
  width: 30vw;
  min-height: 110rpx;
  border: 1PX solid #0C7AD6;
  border-radius: 10rpx;
  padding: 10rpx 0;
  color: #0C7AD6;
  margin: 0 1vw 28rpx;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  box-sizing: border-box;
}
.ProductItem.active {
  background-color: #0C7AD6;
  border: 1PX solid #0C7AD6;
  color: #fff;
}
.ProductItem.disabled {
  border: 1PX solid #ddd;
  color: #ddd;
  pointer-events: none;
}
.ProductItem .hotTips {
  position: absolute;
  padding: .2em .7em;
  border-radius: 1em;
  border-bottom-left-radius: 0;
  white-space: nowrap;
  color: #fff;
  font-size: 20rpx;
  background-image: linear-gradient(90deg, #ff782e, #ff4e47);
  right: -.44em;
  top: -1em;
}
.ProductItem .name {
  font-weight: bold;
  font-size: 30rpx;
}
.ProductItem .name .days {
  font-size: 18rpx;
}
.ProductItem .price {
  font-size: 24rpx;
  margin-top: 6rpx;
}